@page
@using SportClub.Aids
@using SportClub.Data.ParticipantOfTraining
@using SportClub.Pages.Extensions
@model SportClub.Soft.Areas.Participant.Pages.Participants.DetailsModel

@{
    Layout = "_Details";
    const string units = "/ParticipantOfTraining/ParticipantOfTrainings";
    var participantId = GetMember.Name<ParticipantOfTrainingData>(x => x.ParticipantId);
}

<body>
    @Html.DisplayControlsFor(m => m.Item.Id)
    @Html.DisplayControlsFor(m => m.Item.Name)
    @Html.DisplayControlsFor(m => m.Item.Age)
    @Html.DisplayControlsFor(m => m.Item.Address)
</body>

@section Details
{
    @Html.HypertextLinkFor(string.Empty, new Link("Show participants trainings",
        $"{units}/Index?fixedFilter={participantId}&fixedValue={Model.Item.Name}"))
}

