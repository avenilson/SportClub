@page
@using SportClub.Pages.Extensions
@model SportClub.Soft.Areas.Training.Pages.Trainings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TrainingData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrainingData.Id" />
            @Html.EditControlsFor(x => x.TrainingData.Id)
            @Html.EditControlsFor(x => x.TrainingData.Name)
            @Html.EditControlsFor(x => x.TrainingData.Definition)
            @Html.EditControlsFor(x => x.TrainingData.Duration)
            @Html.EditControlsFor(x => x.TrainingData.ParticipantsCount)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
